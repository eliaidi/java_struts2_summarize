	<!-- 访问带有占位符的 value 值 -->
	<s:text name="time">
		<s:param value="date"></s:param>
	</s:text>
	<br/>
	
	<!-- 直接访问值栈中的属性值 -->
	<s:text name="time2">
	</s:text>
